<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns="http://schemas.android.com/apk/res-auto">


    <data>

        <import type="com.geetol.myapplication.TestMode" />

        <import type="com.geetol.myapplication.MainActivity.UserPresenter" />

        <import type="android.view.View" />


        <variable
            name="tests"
            type="TestMode" />

        <variable
            name="onc"
            type="UserPresenter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:onClick="@{()->onc.onUserNameClick(tests)}"
            android:text="@{tests.name}"

            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/test2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:onClick="@{()->onc.onUserNameClick2(tests)}"
            android:text="显示隐藏"
            app:setColor="@{tests.cor}" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:imageUrl="@{tests.url}" />
    </LinearLayout>
</layout>